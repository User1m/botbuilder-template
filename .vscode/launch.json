{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [{
            "type": "node",
            "request": "launch",
            "name": "Launch Program - app",
            "program": "${workspaceRoot}/src/server.ts",
            "cwd": "${workspaceFolder}",
            "outFiles": ["${workspaceRoot}/release/**"],
            "sourceMaps": true
            //note: run `npm run watch` when you launch debugger
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program - file",
            "program": "${file}",
            "stopOnEntry": true,
            "outFiles": []
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Port",
            "processId": "${command:PickProcess}",
            "stopOnEntry": false,
            "port": 5858,
            "outFiles": []
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceRoot}/release/test/**/*.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Run mocha",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/mocha/bin/_mocha",
            "stopOnEntry": false,
            "args": [
                "--ui",
                "tdd",
                "./release/test/**/*.js",
                "--no-timeouts"
            ],
            "cwd": "${workspaceRoot}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "test"
            }
        },
        {
            "name": "Run Jasmine",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/jasmine",
            "stopOnEntry": false,
            "args": [
                "--config=${workspaceRoot}/jasmine.json",
                "${workspaceRoot}/release/specs/**/*.js"
            ],
            "cwd": "${workspaceRoot}",
            "sourceMaps": true,
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "test"
            }
        }
    ]
}